<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%=simple_form_for [@restaurant] do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :phone_number %>
      <%= f.input :category, collection: Restaurant::CATEGORIES, :prompt => 'Select a category' %>
      <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
